  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "creategame2",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/cli.js",
      "envFile": "${workspaceFolder}/.env.test",
      "args": [
        "--map",
        "${workspaceFolder}/data/maps/map02.json",
        "creategame2",
        "--map-name",
        "map02",
        "--name",
        "A chaintrap game created by developer testing",
        "--description",
        "The description of a chaintrap game created by developer testing",
        "--max-participants",
        "3",
        "--openai-image-prompt",
        "A stylised icon representing a turn based random dungeon crawler game"
      ]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "joingame2",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/cli.js",
      "envFile": "${workspaceFolder}/.env.test",
      "args": [
        "joingame2",
        "--id",
        "0x0400000000000000000000000000000001",
        "--nickname",
        "player1"
      ]
    },

    {
      "type": "node",
      "request": "launch",
      "name": "startgame2",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/cli.js",
      "envFile": "${workspaceFolder}/.env.test",
      "args": [
        "--map",
        "${workspaceFolder}/data/maps/map02.json",
        "--map-name", "map02",
        "startgame2",
        "--id",
        "0x0400000000000000000000000000000001",
        "--starts",
        "1"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "watch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/cli.js",
      "args": [
        "--arena",
        "0xcA88B57549db9f89C1f9D3603b4e04A15242e100",
        "-u",
        "http://localhost:8545",
        "watch",
        "-p",
        "data/providers/only-hardhat.json",
        "--which",
        "hardhat"
      ]
    }
  ]
}
